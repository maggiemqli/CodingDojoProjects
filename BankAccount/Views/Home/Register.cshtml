@model RegisterViewModel

<h1>Register <a href="/login" style="font-size: 12pt; text-decoration: underline; padding-left: 3em;">( Already Registered ? )</a></h1>
<br>
<div class="col-sm-4">
     <!-- <div class="alert alert-danger" asp-validation-summary="All"></div> -->
    <form method="post" asp-controller=“Home” asp-action="RegisterUser">
        <div class="form-group">
            <label asp-for="first_name"></label>
            <span asp-validation-for="first_name"></span>
            <input class="form-control" asp-for="first_name" >
        </div>
        <div class="form-group">
            <label asp-for="last_name"></label>
            <span asp-validation-for="last_name"></span>
            <input class="form-control" asp-for="last_name" >
        </div>
        <div class="form-group">
            <label asp-for="email"></label>
            <span asp-validation-for="email"></span>
            <input class="form-control" asp-for="email" >
        </div>
        <div class="form-group">
            <label asp-for="password"></label>
            <span asp-validation-for="password"></span>
            <input class="form-control" asp-for="password" >
        </div>
        <div class="form-group">
            <label asp-for="PasswordConfirmation"></label>
            <span asp-validation-for="PasswordConfirmation"></span>
            <input asp-for="PasswordConfirmation" class="form-control" >
        </div>
        <input type="submit" value="Submit" class="btn btn-info">
    </form>
</div>