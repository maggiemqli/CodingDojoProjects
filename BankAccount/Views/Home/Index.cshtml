@{
    ViewData["Title"] = "Login Page";
}
@model LoginViewModel

<h1>Login <a href="/register" style="font-size: 12pt; text-decoration: underline; padding-left: 6em;">( Need to Register ? )</a></h1>
<br>
<div class="col-sm-4">
    <!-- <div class="alert-danger" asp-validation-summary="All"></div> -->
    <form method="post" asp-controller=“Home” asp-action="LoginUser">
        <div class="form-group">
            <label asp-for="LogEmail"></label>
            <span class="alert-danger" asp-validation-for="LogEmail"></span>
            <input class="form-control" asp-for="LogEmail" >
        </div>
        <div class="form-group">
            <label asp-for="LogPassword"></label>
            <span class="alert-danger" asp-validation-for="LogPassword"></span>
            <input class="form-control" asp-for="LogPassword" >
        </div>
        <input type="submit" value="Submit" class="btn btn-info">
    </form>
</div>