@model AuctionView

<div class="container">
    <div class="row">
        <div class="nav">
            <h1 class="col-sm-6">New Auction</h1>
            <h1 class="col-sm-6 text-right" style="font-size: 13pt; vertical-align: bottom;">
                <a href="/dashboard">Dashboard |</a>
                <a href="/logout">  Logout</a>
            </h1>
        </div>
        <br>
        <form method="post" asp-controller="Dashboard" asp-action="CreateAuction" class="col-md-10">
            <div class="col-sm-6">
                <div class="form-group">
                    <label asp-for="product_name"></label>
                    <span asp-validation-for="product_name"></span>
                    <input class="form-control" asp-for="product_name">
                </div>
                <div class="form-group">
                    <label asp-for="description"></label>
                    <span asp-validation-for="description"></span>
                    <textarea class="form-control" asp-for="description" rows="8" cols="20"></textarea>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <label asp-for="starting_bid"></label>
                    <span asp-validation-for="starting_bid"></span>
                    <input class="form-control" asp-for="starting_bid">
                </div>
                <div class="form-group">
                    <label asp-for="end_date"></label>
                    <span asp-validation-for="end_date"></span>
                    <input class="form-control" asp-for="end_date">
                </div>
                <input type="submit" value="Create Auction" class="CreateAuction" style="margin-top: 100px;margin-left: 22em;">
            </div>
        </form>
    </div>
</div>
