@{
    ViewData["Title"] = "Home Page";
}
@model RegisterViewModel

<br>

<form method="post" asp-controller="Home" asp-action="RegisterUser">
    <div class="form-group">
        <label asp-for="username"></label>
        <span class="alert-danger" asp-validation-for="username"></span>
        <input class="form-control" asp-for="username" >
    </div>
    <div class="form-group">
        <label asp-for="first_name"></label>
        <span class="alert-danger" asp-validation-for="first_name"></span>
        <input class="form-control" asp-for="first_name" >
    </div>
    <div class="form-group">
        <label asp-for="last_name"></label>
        <span class="alert-danger" asp-validation-for="last_name"></span>
        <input class="form-control" asp-for="last_name" >
    </div>
    <div class="form-group">
        <label asp-for="password"></label>
        <span class="alert-danger" asp-validation-for="password"></span>
        <input class="form-control" asp-for="password" >
    </div>
    <div class="form-group">
        <label asp-for="PasswordConfirmation"></label>
        <span class="alert-danger" asp-validation-for="PasswordConfirmation"></span>
        <input asp-for="PasswordConfirmation" class="form-control" >
    </div>
    <input type="submit" value="Submit" class="btn btn-info">
</form>
